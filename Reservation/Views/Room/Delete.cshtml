@model LibraryReservation.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Are you sure you want to delete this room?</h2>

<div>
    <p><strong>Room Number:</strong> @Model.RoomNumber</p>
    <p><strong>Room Type:</strong> @Model.RoomType</p>
    <p><strong>Hotel:</strong> @Model.Hotel?.Name</p>
</div>

<form asp-controller="RoomController" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
