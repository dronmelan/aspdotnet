@model Reservation.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>

<form asp-controller="Room" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomType"></label>
        <input asp-for="RoomType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PricePerNight"></label>
        <input asp-for="PricePerNight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label asp-for="HotelId">Hotel</label>
        <select asp-for="HotelId" class="form-control" asp-items="ViewBag.Hotels"></select>
    </div>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
