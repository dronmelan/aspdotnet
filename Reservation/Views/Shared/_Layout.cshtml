<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Room Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-primary text-white p-3 mb-4">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <h1>Room Booking</h1>
                </div>
                <div class="col-auto">
                    <nav class="navbar navbar-expand-lg">
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <span class="navbar-text text-white me-3">
                                        Привіт, @User.Identity.Name (@(User.IsInRole("Admin") ? "Адмін" : "Користувач"))
                                    </span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Auth" asp-action="Logout">Вийти</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Auth" asp-action="Login">Увійти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Auth" asp-action="Register">Реєстрація</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="bg-light text-center p-3 mt-5">
        <small>&copy; 2025 Room Booking</small>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>